.col-sm-12{style: "margin:100px auto;"}
  .solife-login-form
    .solife-login-inner{:style => "box-shadow: 0 0 1em black;"}
      .social-login{:style => "height:50px;"}
        %div{:style => "width:100%;height:50px;text-align:center;border-radius:5px;"}
          %img{src: "./images/logo_xiaojiti.gif", style: "width:170px;height:60px;"}
      %form#new_user.simple_form.new_user{"accept-charset" => "UTF-8", :action => "/admin/chk_login", "data-remote" => "true", :method => "post", :novalidate => "novalidate"}
        %div{:style => "margin:0;padding:0;display:inline"}
          %input{:name => "utf8", :type => "hidden", :value => "✓"}
            %input{:name => "authenticity_token", :type => "hidden", :value => "unJmyJwAxZvm2Ubaur50g4dnDB1h451u6wX/RLAcMfY="}/
        .control-group.email.required.user_email
          .controls
            .input-group
              %span.input-group-addon
                %span.solife-login.login-user
              %input#name.form-control.email.required{:autofocus => "autofocus", :maxlength => "255", :name => "name", :placeholder => "登陆名称", :size => "50", :type => "text", :value => ""}
        .control-group.password.optional.user_password
          .controls
            .input-group
              %span.input-group-addon
                %span.solife-login.login-pwd
              %input#password.password.form-control{:maxlength => "128", :name => "password", :placeholder => "密码", :size => "50", :type => "password"}
        %input{:name => "user[remember_me]", :type => "hidden", :value => "0"}
          %label.checkbox
            %input#user_remember_me.boolean.optional{:inline_label => "记住密码", :name => "user[remember_me]", :type => "checkbox", :value => "1"} 记住密码
          %input.btn.btn-default.btn-primary.right{:name => "commit", :type => "submit", :value => "登陆"}
